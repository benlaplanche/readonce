<h2>Sign in</h2>
<div class="col-lg-6">
	<div class='well'>
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'bs-example form-horizontal'}) do |f| %>

	<%= field_set_tag do %>
		  <div class='formgroup'><%= f.label :email, :class => 'control-label' %><br />
		  <%= f.email_field :email, :autofocus => true, :class => 'form-control' %></div>

		  <div class='formgroup'><%= f.label :password, :class => 'control-label' %><br />
		  <%= f.password_field :password, :class => 'form-control' %></div>

		  <% if devise_mapping.rememberable? -%>
		    <div class='formgroup'><%= f.check_box :remember_me %> <%= f.label :remember_me, :class => 'control-label' %></div>
		  <% end -%>

		  <div class='formgroup'><%= f.submit "Sign in", :class => 'btn btn-success btn-sm' %></div>
	<% end %>
		<% end %>
	</div>

<%= render "devise/shared/links" %>
</div>